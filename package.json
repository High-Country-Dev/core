{
  "name": "@mtndev/root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.16.0"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "turbo run build",
    "changeset:create": "pnpm changeset",
    "changeset:version": "pnpm changeset version",
    "clean": "git clean -xdf .turbo node_modules",
    "clean:workspaces": "turbo clean && pnpm clean",
    "dev": "concurrently \"pnpm dev-package-json:watch\" \"turbo dev\" --names \"dev-pkg-json,dev\" --handle-input --default-input-target 1",
    "dev-package-json": "node scripts/build/dev-package-json.js",
    "dev-package-json:watch": "node scripts/build/dev-package-json.js --watch",
    "format": "turbo format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "release:staging:registry:up": "verdaccio -c scripts/release/staging/.verdaccio/config.yml -l 3630",
    "release:staging:publish": "pnpm publish --registry http://localhost:3630 --no-git-checks",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@mtndev/eslint-config": "^0.0.0-test.0",
    "@mtndev/tailwind-config": "^0.0.0-test.0",
    "@next/eslint-plugin-next": "^14.2.23",
    "@types/cross-spawn": "^6.0.6",
    "@types/eslint": "^8.56.2",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "~18.3.12",
    "@types/react-dom": "~18.3.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "chalk": "^4.1.2",
    "class-variance-authority": "^0.7.1",
    "commander": "^13.1.0",
    "concurrently": "^9.1.2",
    "cross-spawn": "^6.0.6",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsonc": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-turbo": "^2.3.4",
    "eslint-plugin-typescript-sort-keys": "^2.3.0",
    "fs-extra": "^11.3.0",
    "glob": "10.3.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rimraf": "5.0.0",
    "tailwindcss": "^3.4.14",
    "tsup": "7.0.0",
    "turbo": "^2.3.4",
    "typescript": "^5.8.3",
    "verdaccio": "^6.1.2"
  },
  "lint-staged": {
    "*.+(ts|tsx|js|jsx)": [
      "npx eslint --fix",
      "npx prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/High-Country-Dev/core.git",
    "directory": "."
  }
}
